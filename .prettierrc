{
  "printWidth": 80,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "trailingComma": "all",
  "arrowParens": "avoid",
  "importOrder": [
    "^react$",
    "<THIRD_PARTY_MODULES>",
    "^@bit/(.*)$",
    "^(adapters|components|constants|featureFlags|images|i18n|services|styles|types|translations|utils)(.*)$",
    "^(features)(.*)$",
    "__mocks__",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
